require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "music-cache"
    gem.summary = %Q{Index and analyze and repair your music collection}
    gem.description = %Q{Index and analyze and repair your music collection}
    gem.email = "andrew.hay.kurtz@gmail.com"
    gem.homepage = "http://github.com/gzuki/music-cache"
    gem.authors = ["Andrew Hay Kurtz"]
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end